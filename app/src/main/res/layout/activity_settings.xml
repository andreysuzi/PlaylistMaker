<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/side_padding"
    android:paddingEnd="@dimen/side_padding_end"
    android:paddingTop="@dimen/top_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginBottom="40dp">

        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="@dimen/image_16"
            android:layout_height="@dimen/image_16"
            android:layout_marginStart="@dimen/button_margin"
            android:layout_marginTop="@dimen/margin_arrow_back"
            android:src="@drawable/arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:backgroundTint="@color/white"
            android:text="@string/settings"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/title" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/settings_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/dark_theme"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/settings_line" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/settings_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/share"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/settings_line" />

        <ImageView
            android:layout_width="@dimen/image_16"
            android:layout_height="@dimen/image_18"
            android:layout_gravity="end"
            android:src="@drawable/share"
            android:layout_marginEnd="2dp"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/settings_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/support"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/settings_line" />

        <FrameLayout
            android:layout_width="@dimen/image_20"
            android:layout_height="@dimen/image_18"
            android:layout_gravity="end">

            <ImageView
                android:layout_width="@dimen/image_20"
                android:layout_height="@dimen/image_18"
                android:layout_gravity="start"
                android:src="@drawable/support" />

            <ImageView
                android:layout_width="@dimen/image_12"
                android:layout_height="@dimen/image_6"
                android:layout_gravity="start"
                android:layout_marginHorizontal="@dimen/margin_support_3_horisontal"
                android:layout_marginTop="@dimen/margin_support_3_top"
                android:src="@drawable/support_3" />

            <ImageView
                android:layout_width="@dimen/image_2"
                android:layout_height="@dimen/image_2"
                android:layout_gravity="start"
                android:layout_marginHorizontal="@dimen/margin_support_1_start"
                android:layout_marginTop="@dimen/margin_support_1_top"
                android:src="@drawable/support_1" />

            <ImageView
                android:layout_width="@dimen/image_2"
                android:layout_height="@dimen/image_2"
                android:layout_gravity="start"
                android:layout_marginHorizontal="@dimen/margin_support_2_start"
                android:layout_marginTop="@dimen/margin_support_1_top"
                android:src="@drawable/support_1" />

        </FrameLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/settings_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/agreement"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/settings_line" />

        <ImageView
            android:layout_width="@dimen/image_8"
            android:layout_height="@dimen/image_14"
            android:layout_gravity="end"
            android:src="@drawable/arrow_forward"
            android:layout_marginEnd="6dp"/>

    </FrameLayout>

</LinearLayout>