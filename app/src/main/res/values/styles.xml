<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/top_padding</item>
        <item name="android:paddingHorizontal">@dimen/side_padding</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="MainLayout" parent="BaseLayout">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/title</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero</item>
        <item name="android:layout_marginBottom">@dimen/button_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="iconTint">@color/dark_grey</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsButton">
        <item name="android:layout_gravity">end|center</item>
    </style>

    <style name="SettingsStringLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/settings_padding</item>
    </style>

    <style name="SettingsString">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/settings_line</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ArrowBack">
        <item name="android:layout_width">@dimen/image_16</item>
        <item name="android:layout_height">@dimen/image_16</item>
        <item name="android:layout_marginStart">@dimen/button_margin</item>
        <item name="android:layout_marginTop">@dimen/margin_arrow_back</item>
        <item name="android:src">@drawable/arrow_back</item>
    </style>

    <style name="TrackTitle">
        <item name="android:textSize">@dimen/main_text</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TrackSubtitle">
        <item name="android:textSize">@dimen/sub_text</item>
        <item name="android:textColor">@color/sub_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>